/* pages/mine/mine.wxss */
.flex_box{
	display: flex;
}
#mine{
	position: relative;
/* 	background: #D8D8D8; */
}
.top{
	width: 100%;
	background: #fff;
	position: relative;
	padding-bottom: 80rpx;
}
.top image{
	width: 100%;
	height: 212rpx;
}
.top .name{
	width: 100%;
	position: absolute;
	left:0;
	top:54rpx;
	text-align: center;
	font-family: PingFangSC-Semibold;
	font-size: 36rpx;
	color: #333333;
}
.top .userImage{
	position: absolute;
	left:50%;
	top:140rpx;
	z-index: 100;
	width: 144rpx;
	height: 144rpx;
	border-radius: 50%;
	border:2rpx solid #fff;
	margin-left:-72rpx;
}


.birthday{
	width: 100%;
	text-align: center;
	background: #fff;
}
.birthday image{
	width: 24rpx;
	height: 24rpx;
	margin-right: 20rpx;
}
.birthday text{
	font-family: PingFangSC-Medium;
	font-size: 24rpx;
	color: #666666;
}
.birthday_data{
	width: 180rpx;
	height: 36rpx;
	background: #FFC85B;
	box-shadow: 0 7px 13px -3px #FEDE85;
	border-radius: 20rpx;
	font-family: PingFangSC-Semibold;
	font-size: 24rpx;
	color: #FFFFFF;
	text-align: center;
	margin:20rpx auto 30rpx;
}

.gray{
	width: 100%;
	height: 20rpx;
	background: #D8D8D8;
	opacity: 0.3;
}




.top_list{
	height: 90rpx;
	padding:0rpx 30rpx;
	justify-content: space-between;
	align-items: center;
}
.top_list_logo{
	width: 32rpx;
	height: 32rpx;
	margin-right: 30rpx;
}
.top_list_text{
	flex:1;
	height: 90rpx;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1rpx solid #f1f1f1;
}
.top_list_text text{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #333333;
	letter-spacing: 0;
	line-height: 32rpx;
	font-weight: bold;
}
.arrows{
	width: 20rpx;
	height: 20rpx;
}


.bottom_list{
	border-top:20rpx solid #f1f1f1;
}